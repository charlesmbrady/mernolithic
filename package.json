{
  "name": "mernolithic",
  "version": "1.0.0",
  "description": "mernolithic",
  "main": "server/src/server.js",
  "scripts": {
    "test": "echo \"no tests yet\"",
    "start": "npm run start:prod",
    "start:prod": "node server/src/server.js",
    "start:dev": "concurrently \"nodemon server/src/server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "frontend-unit-tests": "cd client && npm run test",
    "backend-unit-tests": "mocha test/*/*.test.js",
    "ui-tests": "cypress run",
    "api-tests": "NODE_ENV=local mocha test/api/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesmbrady/mernolithic.git"
  },
  "keywords": [
    "MERN"
  ],
  "author": "Charles Brady",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlesmbrady/mernolithic/issues"
  },
  "homepage": "https://github.com/charlesmbrady/mernolithic#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.2",
    "custom-env": "^1.0.2",
    "cypress": "^3.4.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "supertest": "^4.0.2",
    "wait-on": "^3.3.0"
  }
}
